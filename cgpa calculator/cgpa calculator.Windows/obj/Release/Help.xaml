<Page
    x:Class="cgpa_calculator.Help"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:cgpa_calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Foreground="#FFE6266C">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/images.png"
                    Stretch="UniformToFill" />
        </Grid.Background>
        <TextBlock x:ConnectionId='1' HorizontalAlignment="Left" Margin="170,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="430" Width="1060" FontSize="30" Foreground="#FFF5F5FB"                                              >
        	<Run Text="This is a very light app. On home screen you will find four options. If you select the Calculate GPA option , then at first you have to select how many theory courses and Lab courses you have. Then for each theory and lab courses you can enter it's GPA and credits. You can also edit the name of each course. After giving the GPA and credit for all subjects you will get the total GPA for a particular semester. You can also edit an entered GPA by touching the back button."/>
        	<LineBreak/>
        	<Run/>
        	<LineBreak/>
        	<Run Text="There are two other options, these are Help and About option. "/>
        	<LineBreak/>
        	<Run/>
        	<LineBreak/>
        	<Run Text="There is also an exit button to close the app."/>
        </TextBlock>
        <Button x:ConnectionId='2' x:Name="BackBtn" Content="Back" HorizontalAlignment="Left" Margin="622,582,0,0" VerticalAlignment="Top" Width="181" Height="66" FontSize="32" Background="#FFDC1D5A"                      />
    </Grid>
</Page>

